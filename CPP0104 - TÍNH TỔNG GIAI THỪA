#include <iostream>
#include <iomanip>
using namespace std;
int main()
{
    int a;
    cin >> a;
    long long sum = 0;
    for (int i = 1; i <= a; i++)
    {
        long long tmp = 1;
        for (int j = 1; j <= i; j++)
        {
            tmp *= j;
        }
        sum += tmp;
    }
    cout << sum;
}
