#include <iostream>
#include <string>
#include <sstream>
#include <vector>
using namespace std;
int main()
{
    string s1, tmp;
    getline(cin, s1);
    for (int i = 0; i < s1.size(); i++)
    {
        s1[i] = tolower(s1[i]);
    }
    vector<string> v;
    stringstream ss(s1);
    while (ss >> tmp)
    {
        v.push_back(tmp);
    }
    cout << v[v.size() - 1];
    for (int i = 0; i < v.size() - 1; i++)
    {
        cout << v[i][0];
    }
    cout << "@ptit.edu.vn";
}
