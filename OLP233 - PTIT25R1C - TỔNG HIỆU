#include <iostream>
#include <cmath>
#include <algorithm>
using namespace std;
int main()
{
    int m;
    cin >> m;
    long long a[m];
    for (int i = 0; i < m; i++)
    {
        cin >> a[i];
    }
    long long sum = 0;
    sort(a, a + m);
    for (int i = 0; i < m; i++)
    {
        sum += (i - (m - 1 - i)) * a[i];
    }
    cout << sum;
}
