#include <iostream>
#include <algorithm>
#include <vector>
#include <cmath>
#include <map>
using namespace std;
int main()
{
    int m;
    cin >> m;
    while (m--)
    {
        long long a, b, c;
        cin >> a >> b >> c;
        long long sum = 0;
        a %= c;
        while (b != 0)
        {
            if (b % 2 != 0)
            {
                sum = (sum + a) % c;
                b -= 1;
            }
            a = (a * 2) % c;
            b /= 2;
        }
        cout << sum << endl;
    }
}
